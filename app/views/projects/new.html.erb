<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Create New Project</h1>
    <p class="text-center">Trow your project in the GRDN and gain many views by lovers.</p>
    <div class="well">
      <%= form_for @projects, url: user_projects_path do |f| %>
        <div class="form-group">
          <%= f.label :street_name %>
          <%= f.text_field :street_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :house_number %>
          <%= f.text_field :house_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :postalcode %>
          <%= f.text_field :postalcode, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :daysofwork %>
          <%= f.text_field :daysofwork, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Profile", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>